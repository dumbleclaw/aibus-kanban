  slug: string;
  name: string;
  taskCount: number;
  lastSyncedAt: number;
}

const { slug, name, taskCount, lastSyncedAt } = Astro.props;
const syncDate = new Date(lastSyncedAt).toLocaleDateString('en-US', {
  month: 'short',
  day: 'numeric',
  hour: '2-digit',
  minute: '2-digit',
});
